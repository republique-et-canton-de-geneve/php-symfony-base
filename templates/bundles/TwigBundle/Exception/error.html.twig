{% extends 'base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('error') }}
{% endblock %}
{% block body_id %}page-error{% endblock %}
{% block body_class %}page-error{% endblock %}
{% block main %}
  <div class="container">
    <div class="row  error-zone-1 img">
      <div class="col-md-4 col-12 error-title">
        <h1>{% block error_title %}Une incroyable erreur s'est produite.{% endblock %}</h1>
        <div class="error-code">
          {% block error_code %}500{% endblock %}
        </div>
        <div class="error-image img{{ block('error_code') }}">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-12">
        <h3>Veuillez consulter</h3>
        <div class="row">
          <div class="col-6">
            <p>
              <a href="{{ path('homepage') }}">Retourner à la page d'accueil</a><br>
            </p>
          </div>
          <div class="col-6">
            Ou contacter la hotline<br>
            (de 8h à 18h)<br>
            <i class="bi bi-telephone"></i>123456789<br>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
{% endblock %}
